  </div>

  <div>
    <%= form.label :purchase_fee, style: "display: block" %>
    <%= form.text_field :purchase_fee, class: "input" %>
  </div>

  <div>
    <%= form.submit "Add vehicle", id: "submit" %>
  </div>
